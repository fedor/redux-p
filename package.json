{
  "name": "redux-p",
  "version": "1.0.1",
  "description": "Redux middleware for promises",
  "repository": {
    "type": "git",
    "url": "git://github.com/fedor/redux-p.git"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run build-commonjs && npm run build-umd && npm run build-umd-min",
    "build-commonjs": "babel src -d lib",
    "build-umd": "webpack --output-filename index.js",
    "build-umd-min": "webpack -p --devtool source-map --output-filename index.min.js"
  },
  "keywords": [
    "promise",
    "redux",
    "react",
    "react-native",
    "middleware"
  ],
  "author": "Fedor Korshunov <mail@fedor.cc>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "webpack": "^2.2.1"
  }
}
